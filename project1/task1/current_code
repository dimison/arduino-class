///this function controls the order of operations of the code
int normal_mode(){
  if(!digitalRead(cop_button) && !digitalRead(power_loss_button)){
      if(turn==highway && highway_color==green){
        for(start at 0; time>=10 || !digitalRead(cop_button) || !digitalRead(power_loss_button)){
          wait(1);
        }
        cycle();
        time=0;
      }
      else if(turn==highway && highway_color==yellow){
        for(start at 0; time>=half_second || !digitalRead(cop_button) || !digitalRead(power_loss_button)){
          delay(half_second);
        }
        cycle();
        time=0;
      }
      else if(turn==road && road_color==green){
        for(start at 0; time>=10 || !digitalRead(cop_button) || !digitalRead(power_loss_button)){
          wait(1);
        }
        cycle();
        time=0;
      }
        else if(turn==road && highway_color==green){
        for(start at 0; time>=half_second || !digitalRead(cop_button) || !digitalRead(power_loss_button)){
          wait(1);
        }
        cycle();
        time=0;
      }
  }
  return 0;
}
  
